<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/pin_margin"
			android:gravity="center"
			android:orientation="horizontal" >
	
			<include android:id="@+id/pin_digit1"
				layout="@layout/layout_lockscreen_digit"
			/>
			
			<include android:id="@+id/pin_digit2"
				layout="@layout/layout_lockscreen_digit"
			/>
			
			<include android:id="@+id/pin_digit3"
				layout="@layout/layout_lockscreen_digit"
			/>
			
			<include android:id="@+id/pin_digit4"
				layout="@layout/layout_lockscreen_digit"
			/>		
					
		</LinearLayout>

	<include
		android:id="@+id/keypad"
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_marginBottom="@dimen/keypad_margin_bottom"
		android:layout_weight="1"
		layout="@layout/layout_keypad"
		android:gravity="center" />
	
